<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".heard_info_heard"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".heard_info_home"), root_path %></li>
        <li><%= link_to t(".heard_info_help"), helf_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".heard_info_user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".heard_info_Account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".heard_info_Profile"), current_user %></li>
              <li><%= link_to t(".heard_info_Settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".heard_info_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".heard_info_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
